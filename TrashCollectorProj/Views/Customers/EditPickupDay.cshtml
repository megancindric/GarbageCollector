@model TrashCollectorProj.Models.Customer

@{
    ViewData["Title"] = "Edit Scheduled Pickup Day";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Scheduled Pickup Date</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPickupDay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PickupDay" class="control-label">Pickup Day</label>
                <input asp-for="PickupDay" class="form-control" />
                <span asp-validation-for="PickupDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
