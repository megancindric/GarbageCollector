@model TrashCollectorProj.Models.Customer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Trash Panda Dashboard</h1>

<div>
    <h4>Your Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            "First Name"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            "Last Name"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            "Telephone Number""
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            "Scheduled Pickup Day"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickupDay)
        </dd>
        <dt class="col-sm-2">
            "Street Address"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt class="col-sm-2">
           "City"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
           "State"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            "Zip Code"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit User Profile</a> |
    <a asp-action="EditPickupDate" asp-route-id="@Model.Id">Change Scheduled Pickup Day</a>
    <a asp-action="MakePayment">Pay Your Trash Fees</a>
    <a asp-action="Index">BUTTON TO Schedule EXTRA PICKUP</a>
    <a asp-action="Index">BUTTON TO SUSPEND SERVICE</a>

</div>
