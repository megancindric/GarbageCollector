@model TrashCollectorProj.Models.Customer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Trash Panda Dashboard</h1>

<div>
    <h4>Your Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            "First Name"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            "Last Name"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            "Telephone Number""
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            "Scheduled Pickup Day"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickupDay)
        </dd>
        <dt class="col-sm-2">
            "Street Address"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt class="col-sm-2">
            "City"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            "State"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            "Zip Code"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            "Current Trash Fees"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrashFees)
        </dd>
    </dl>
</div>
<div>
    <h4>Extra Pickups</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            "Extra Pickup Date"
        </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExtraPickupDate.Date)
            </dd>
    </dl>
    <a asp-action="ScheduleExtraPickup">Schedule a 1-Time Extra Pickup</a>
</div>
<div>
    <a asp-action="Edit">Edit User Profile</a> |
    <a asp-action="EditPickupDay">Change Scheduled Pickup Day</a>
    <a asp-action="MakePayment">Pay Your Trash Fees</a>
    
    <a asp-action="SuspendService">Temporarily Suspend Service</a>

</div>
